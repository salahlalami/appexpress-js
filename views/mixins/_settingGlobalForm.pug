
mixin settingGlobalForm(actionForm={})

    .component(data-component="ajaxForm")
        .alert-success.alert Successfully udated
        .alert-error.alert Oops there is error
        form.ajax(action=actionForm+"create/" data-add=actionForm+"create/" data-read=actionForm+"read/" data-edit=actionForm+"update/" method="POST")
            .loaderWarpper
                .loader

            .col-24.alpha.omega
                label(for="name") Name
                input(type="text" name="name" autocomplete="off")
            
            .col-24.alpha.omega
                label(for="value") Value
                input(type="text" name="value" autocomplete="off")
            
            .col-24.alpha.omega
                label(for="tableName") TableName
                input(type="text" name="tableName" autocomplete="off")
                       
            .col-24.alpha.omega
                label(for="relationID") Relation ID
                input(type="text" name="relationID" autocomplete="off")

            .col-24.alpha.omega
                label(for="enabled") Activ√©e
                select(name='enabled')
                    option(value='true') Oui
                    option(value='false') Non
            
            .clearfix
            .col-12.alpha    
                button(type="submit" class="save")  Enregistrer      
            .col-12.omega
                button(type="button" class="cancel")  Cancel 
